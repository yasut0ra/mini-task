{
  "version": 2,
  "env": {
    "NPM_CONFIG_PRODUCTION": "false"
  },
  "functions": {
    "backend/server.js": {
      "runtime": "nodejs18.x@18.16.0"
    }
  },
  "buildCommand": "cd frontend && npm install --include=dev && npx vite build",
  "outputDirectory": "frontend/dist",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/server.js"
    },
    {
      "source": "/(.*)",
      "destination": "/frontend/dist/$1"
    }
  ]
}