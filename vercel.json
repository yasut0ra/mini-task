{
    "version": 2,
    "env": {
      "NPM_CONFIG_PRODUCTION": "false"
    },
    "builds": [
      {
        "src": "backend/server.js",
        "use": "@vercel/node",
        "config": { "runtime": "nodejs18.x@18.16.0" }
      },
      {
        "src": "frontend/package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "dist" }
      }
    ],
    "buildCommand": "cd frontend && npm install --include=dev && npx vite build",
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "/backend/server.js"
      },
      {
        "source": "/(.*)",
        "destination": "/index.html"
      }
    ]
  }